function [ cM ] = calcConfusionMatrix( Lclass, Ltrue )
%CALCCONFUSIONMATRIX Summary of this function goes here
%   Detailed explanation goes here

classes = unique(Ltrue);
numClasses = length(classes);
cM = zeros(numClasses);

 for true_label_index = 1:numClasses
    true_label = Ltrue(true_label_index);
    for observed_label_index = 1:numClasses
         observed_label = Lclass(observed_label_index);
         if true_label == observed_label
            cM(true_label_index,true_label_index) = cM(observobserved_label_indexed_label_index,true_label_index) + 1;
         end
    end
 end

end
